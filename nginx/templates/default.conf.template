upstream yamdb {
    server web:8000;
}

server {
    listen ${NGINX_PORT};

    location / {
        proxy_pass http://yamdb;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_redirect off;
    }
    location /static/ {
        alias /code/static/;
    }
}
